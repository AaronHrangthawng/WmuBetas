<!-- HERO SECTION -->
<style>
  @keyframes fadeInHero {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .fade-in-hero {
    animation: fadeInHero 1.5s ease-out forwards;
  }

  #heroCarousel {
    position: relative;
    overflow: hidden;
  }

  .carousel-item {
    height: 100vh;
    min-height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  @media (max-width: 768px) {
    .carousel-item {
      height: 85vh;
    }
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    z-index: 2;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7));
    color: white;
  }

  .hero-overlay h1 {
    font-weight: 700;
  }

  .btn-primary {
    background-color: #7851A9;
    border-color: #7851A9;
  }

  .btn-primary:hover {
    background-color: #5c3d9e;
    border-color: #5c3d9e;
  }
</style>

<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000" data-bs-pause="hover">
  <div class="carousel-indicators">
    <% for (let i = 0; i < 5; i++) { %>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>" aria-current="<%= i === 0 ? 'true' : 'false' %>" aria-label="Slide <%= i + 1 %>"></button>
    <% } %>
  </div>

  <div class="carousel-inner">
    <% const heroImages = [
      "home1.jpg",
      "home2.jpg",
      "home3.jpg",
      "home4.JPG",
      "home5.jpg"
    ]; %>

    <% heroImages.forEach((img, i) => { %>
      <div class="carousel-item <%= i === 0 ? 'active' : '' %>" style="background-image: url('/images/Home/<%= img %>');">
        <div class="hero-overlay fade-in-hero">
          <h1 class="display-3">Exotic Epsilon Chapter</h1>
          <p class="lead mb-4">Leadership | Brotherhood | Excellence</p>
          <a href="#about" class="btn btn-primary btn-lg">Learn More</a>
        </div>
      </div>
    <% }); %>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
