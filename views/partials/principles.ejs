  </svg>
</div>

<!-- PRINCIPLES SECTION -->
<section id="principles" class="bg-light text-center fade-in-section py-5">
  <div class="container">
    <h2 class="mb-5" style="color: #7851A9;">Our Principles</h2>
    <div class="row justify-content-center g-4">
      <% const principles = [
        { img: "Brotherhood.jpg", title: "Brotherhood", desc: "We forge lifelong bonds founded on trust, respect, and loyalty among our members and communities." },
        { img: "scholarship.jpg", title: "Scholarship", desc: "We promote academic excellence, supporting the pursuit of knowledge and professional growth." },
        { img: "culture.jpg", title: "Cultural Awareness", desc: "We celebrate, educate, and advocate for the rich cultures and traditions that define our diverse Brotherhood." },
        { img: "service.jpg", title: "Community Service", desc: "We strive to make positive contributions to society through servant leadership and civic engagement." }
      ]; %>

      <% principles.forEach((p, i) => { %>
        <div class="col-12 col-sm-6 col-md-3" data-aos="fade-up" data-aos-delay="<%= i * 100 %>">
          <div class="card h-100 shadow-sm principle-card">
            <img src="/images/principles/<%= p.img %>" alt="<%= p.title %>" class="card-img-top img-fluid rounded-top" style="height: 200px; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title fw-bold" style="color: #7851A9;"><%= p.title %></h5>
              <p class="card-text text-dark small"><%= p.desc %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- Custom Styles -->
<style>
  .principle-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 12px;
  }

  .principle-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(120, 81, 169, 0.25);
  }
</style>
