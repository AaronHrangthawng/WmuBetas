<% title = "E-Board – Exotic Epsilon" %>

<section class="container py-5 text-center">
  <h2 class="mb-5 fw-bold" style="color: #7851A9;">Executive Board</h2>

  <div class="row g-4 justify-content-center">
    <% members.forEach(member => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <img src="/images/eboardUploads/<%= member.image %>" alt="<%= member.name %> – <%= member.position %>"
             class="img-fluid rounded-circle mb-2" style="width: 200px; height: 200px; object-fit: cover;">
        <h5 class="fw-bold mb-1"><%= member.position %></h5>
        <p class="text-muted"><%= member.name %></p>
      </div>
    <% }) %>
  </div>
</section>
