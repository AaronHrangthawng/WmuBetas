<% title = "Exotic Epsilon – Single Page" %>

<!-- HERO -->
<%- include('partials/hero') %>

<!-- ABOUT -->
<%- include('partials/about') %>

<!-- PRINCIPLES -->
<section id="principles">
  <%- include('partials/principles') %>
</section>

<!-- GALLERY -->
<section id="gallery" class="container py-5 text-center">
  <h2 class="mb-5 fw-bold" style="color: #7851A9;">Gallery</h2>
  <div class="row g-4">
    <% images.forEach(img => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <img src="/images/gallery/<%= img.file %>" class="img-fluid rounded shadow-sm" alt="<%= img.caption %>" />
        <p class="text-center small text-muted mt-1"><%= img.caption %></p>
      </div>
    <% }) %>
  </div>
</section>

<!-- LINES -->
<section id="lines" class="container py-5">
  <h2 class="text-center mb-5 fw-bold" style="color: #7851A9;">Lines Timeline</h2>
  <div class="accordion" id="linesAccordion">
    <% lines.forEach((line, i) => {
      const id = `line${i}`;
    %>
      <div class="accordion-item mb-3 shadow-sm">
        <h2 class="accordion-header" id="heading-<%= id %>">
          <button class="accordion-button <%= i !== 0 ? 'collapsed' : '' %>"
            type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= id %>"
            aria-expanded="<%= i === 0 %>" aria-controls="collapse-<%= id %>">
            <%= line.title %> – <%= line.date %>
          </button>
        </h2>
        <div id="collapse-<%= id %>" class="accordion-collapse collapse <%= i === 0 ? 'show' : '' %>">
          <div class="accordion-body">
            <% if (line.image) { %>
              <img src="/images/<%= line.image %>" alt="<%= line.title %>" class="img-fluid rounded mb-3" />
            <% } %>
            <ul>
              <% line.members.forEach(m => { %>
                <li><strong><%= m %></strong></li>
              <% }) %>
            </ul>
            <% if (line.me) { %><p><em>ME: <%= line.me %></em></p><% } %>
            <% if (line.ame) { %><p><em>AME: <%= line.ame %></em></p><% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- EBOARD -->
<section id="eboard" class="container py-5 text-center">
  <h2 class="mb-5 fw-bold" style="color: #7851A9;">Executive Board</h2>
  <div class="row g-4 justify-content-center">
    <% members.forEach(member => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <img src="/images/eboard/<%= member.image %>" class="img-fluid rounded-circle mb-2" style="width: 150px; height: 150px; object-fit: cover;" alt="<%= member.name %>">
        <h5 class="fw-bold mb-1"><%= member.position %></h5>
        <p class="text-muted"><%= member.name %></p>
      </div>
    <% }) %>
  </div>
</section>

<!-- FIRM FAMILY -->
<section id="firm">
  <%- include('partials/firm') %>
</section>

<!-- CONTACT -->
<section id="contact" class="container py-5">
  <h2 class="text-center mb-5 fw-bold" style="color: #7851A9;">Contact Us</h2>
  <div class="row g-4">
    <div class="col-md-6">
      <form action="/contact" method="POST">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input name="name" type="text" class="form-control" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input name="email" type="email" class="form-control" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Message</label>
          <textarea name="message" class="form-control" rows="5" required></textarea>
        </div>
        <button class="btn btn-primary px-4">Send</button>
      </form>
    </div>
    <div class="col-md-6">
      <p><i class="bi bi-envelope"></i> slb.wmu@gmail.com</p>
      <p><i class="bi bi-instagram"></i> <a href="https://instagram.com/slbwmu" target="_blank">@slbwmu</a></p>
      <p><i class="bi bi-facebook"></i> <a href="https://facebook.com/slbwmu" target="_blank">@slbwmu</a></p>
      <p><i class="bi bi-tiktok"></i> <a href="https://tiktok.com/@slbwmu" target="_blank">@slbwmu</a></p>
    </div>
  </div>
</section>

<!-- FOOTER -->
<%- include('partials/footer') %>
