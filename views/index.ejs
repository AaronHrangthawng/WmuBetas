  <!-- WMU Betas Logo -->
  <div class="mb-5">
    <img src="/images/contact/betas-logo.png" alt="betas-logo" class="img-fluid" style="max-height: 120px;">
  </div>

  <!-- Social Media Icons -->
  <div class="row justify-content-center g-4">
    <div class="col-sm-4">
      <img src="/images/contact/Insta.png" alt="Insta" class="img-fluid mb-2" style="max-height: 80px;">
      <p><a href="https://instagram.com/slbwmu" target="_blank" class="text-decoration-none">@slbwmu</a></p>
    </div>
    <div class="col-sm-4">
      <img src="/images/contact/Facebook.avif" alt="Facebook" class="img-fluid mb-2" style="max-height: 80px;">
      <p><a href="https://facebook.com/slbwmu" target="_blank" class="text-decoration-none">@slbwmu</a></p>
    </div>
    <div class="col-sm-4">
      <img src="/images/contact/tiktok.avif" alt="tiktok" class="img-fluid mb-2" style="max-height: 80px;">
      <p><a href="https://tiktok.com/@slbwmu" target="_blank" class="text-decoration-none">@slbwmu</a></p>
    </div>
  </div>
</section>


