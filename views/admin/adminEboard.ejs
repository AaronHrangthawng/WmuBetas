<%- include('partials/adminNav', { activePage: 'eboard' }) %>
<link rel="stylesheet" href="/css/admin.css">


<section class="container py-5">
  <h2 class="mb-4">Manage E-Board</h2>

  <form action="/admin/eboard" method="POST" enctype="multipart/form-data" class="row g-3 mb-5">
    <div class="col-md-4">
      <input type="text" name="name" class="form-control" placeholder="Name" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="position" class="form-control" placeholder="Position" required>
    </div>
    <div class="col-md-4">
      <input type="file" name="image" class="form-control" accept="image/*" required>
    </div>
    <div class="col-12">
      <button class="btn btn-success">Add Member</button>
    </div>
  </form>

  <div class="row g-4">
    <% members.forEach(member => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 text-center">
        <img src="/images/eboardUploads/<%= member.image %>" class="img-fluid rounded-circle mb-2" style="width: 150px;">
        <h6><%= member.position %></h6>
        <p><%= member.name %></p>
        <a href="/admin/eboard/edit/<%= member._id %>" class="btn btn-sm btn-warning me-2">Edit</a>
        <form action="/admin/eboard/delete/<%= member._id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this member?');">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</section>
