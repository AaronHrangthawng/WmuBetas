<%- include('../partials/adminNav', { activePage: 'gallery' }) %>
<link rel="stylesheet" href="/css/admin.css">

<section class="container py-5">
  <h2 class="mb-4">Upload Gallery Image</h2>

  <form action="/admin/gallery/upload" method="POST" enctype="multipart/form-data" class="row g-3 mb-5">
    <div class="col-md-4">
      <input type="file" name="image" class="form-control" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="caption" class="form-control" placeholder="Caption" required>
    </div>
    <div class="col-md-4">
      <button class="btn btn-success w-100">Upload</button>
    </div>
  </form>

  <h4 class="mb-3">Current Images</h4>
  <div class="row g-4">
    <% images.forEach(img => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 text-center">
        <img src="<%= img.file.startsWith('http') ? img.file : '/images/galleryUploads/' + img.file %>" class="img-fluid rounded shadow-sm mb-2" style="height: 180px; object-fit: cover;">
        <p class="small text-muted mb-1"><%= img.caption %></p>
        <a href="/admin/gallery/edit/<%= img._id %>" class="btn btn-sm btn-warning me-1">Edit</a>
        <form action="/admin/gallery/delete/<%= img._id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this image?');">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</section>
