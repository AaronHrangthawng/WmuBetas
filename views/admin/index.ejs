<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard â€“ Messages</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<%- include('../partials/adminNav', { activePage: 'messages' }) %>

<section class="container py-5">
  <h2 class="mb-4">Contact Form Submissions</h2>

  <% if (messages.length === 0) { %>
    <p class="text-muted">No messages received yet.</p>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Received</th>
          </tr>
        </thead>
        <tbody>
          <% messages.forEach(msg => { %>
            <tr>
              <td><%= msg.name %></td>
              <td><%= msg.email %></td>
              <td><%= msg.message %></td>
              <td><%= msg.createdAt.toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</section>

</body>
</html>
